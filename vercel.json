{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "crons": [
    {
      "path": "/api/cron/offer-reminders",
      "schedule": "0 8,18 * * *"
    },
    {
      "path": "/api/cron/recurring-offers",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/cleanup-analytics",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/end-auctions",
      "schedule": "*/5 * * * *"
    }
  ]
}
